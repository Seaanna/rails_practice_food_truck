<p id="notice"><%= notice %></p>

<h1>Truck Payments</h1>

<table>
  <thead>
    <tr>
      <th>Truck</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @truck_payments.each do |truck_payment| %>
      <tr>
        <td><%= truck_payment.truck %></td>
        <td><%= truck_payment.payment %></td>
        <td><%= link_to 'Show', truck_payment %></td>
        <td><%= link_to 'Edit', edit_truck_payment_path(truck_payment) %></td>
        <td><%= link_to 'Destroy', truck_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

